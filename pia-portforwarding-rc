#!/bin/sh

# place this in /usr/local/etc/rc.d then chmod +x pia-portforwarding-rc and rename according to the guide

. /etc/rc.subr

name=pia-portforwarding
rcvar=`set_rcvar`
# modify the path location to pia-pfSense.sh
command=/usr/src/pia-pfSense.sh
start_cmd="/usr/sbin/daemon $command"

load_rc_config $name
run_rc_command "$1"
